<div id="container" class="container">
  <div "container-header">
    <h1>Note Manager</h1>
  </div>
  <div class="row">
    <div id="menu" class="col-sm-2 menu">
      <nav class="nav-sidebar">

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Tags</h3>
          </div>
          <div class="panel-body">
            <a class="tag_link_reset" href="#">Reset filters</a> <br/>

            <a class="tag_link" href="#">#read_later</a> <br/>
            <a class="tag_link" href="#">#bookmark</a><br/>
            <a class="tag_link" href="#">#tip</a><br/>
            <a class="tag_link" href="#">#action</a><br/>
            <a class="tag_link" href="#">#goal</a><br/>
          </div>

          <div class="panel-heading">
            <h3 class="panel-title">All tags</h3>
          </div>
          <div class="panel-body">
            <%= render partial: 'tag_list' %>
          </div>

          <div class="panel-heading">
            <h3 class="panel-title">Views</h3>
          </div>
          <div class="panel-body">
            <ul class="nav">
                <li class="active"><a href="javascript:;">Home Visual</a></li>
                <li><a href="javascript:;">Raw</a></li>
                <li class="nav-divider"></li>
                <li><a href="javascript:;">Journal</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div id="main" class="col-sm-10 main">
      <div class="search_bar form-group">
        <input id="searcher" type="text" class="form-control" placeholder="filter by tag">
      </div>
      <div id="main_notes">
        <%= render :partial => "note_partial", :locals => { note: @root  } %>
      </div>
    </div>
  </div>

</div>
